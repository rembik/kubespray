---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: traefik-ingress-controller
  namespace: "{{ system_namespace }}"
  annotations:
    kubernetes.io/ingress.class: "traefik"
spec:
  rules:
  - host: "{{ traefik_ingress_controller_subdomain }}.{{ traefik_public_cluster_domain|default(cluster_name) }}"
    http:
      paths:
      - backend:
          serviceName: traefik-ingress-controller
          servicePort: 8080